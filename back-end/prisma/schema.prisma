generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  login    String
  email    String
  password String

  twoFaSecret       String?
  twoFaRecoveryCode String?

  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String
  userId    String
  createdAt DateTime @default(now())

  User User @relation(fields: [userId], references: [id])
}
